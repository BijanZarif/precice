<?xml version="1.0"?>

<!-- Configuration for running all unit tests --> 

<configuration>

  <run-tests>

    <log-filter target=""      component=""      switch="off"/>
    <!-- <log-filter target="debug" component="precice::com::MPICommunication" switch="on"/> -->

    <log-filter target="debug" component="precice::cplscheme::impl::IQNILSPostProcessing" switch="off"/>
    <log-filter target="debug" component="precice::cplscheme::BaseCouplingScheme" switch="off"/>
<!--    <log-filter target="debug" component="precice::cplscheme::ParallelyCouplingScheme" switch="on"/>
    <log-filter target="debug" component="precice::cplscheme::SerialCouplingScheme" switch="on"/> -->
    <log-filter target="debug" component="precice::cplscheme::impl::MVQNPostProcessing" switch="on"/>
    <log-filter target="debug" component="precice::cplscheme::impl::BaseQNPostProcessing" switch="on"/>
    <log-filter target="debug" component="precice::cplscheme::impl::MMPostProcessing" switch="off"/>
    <log-filter target="debug" component="precice::cplscheme::impl::QRFactorization" switch="off"/>
    <log-filter target="debug" component="precice::com::tests" switch="on"/>
    <log-filter target="debug" component="precice::cplscheme::tests::ParallelMatrixOperationsTest" switch="on" />
    <log-filter target="debug" component="precice::cplscheme::tests::ParallelImplicitCouplingSchemeTest" switch="on" />
    <log-filter target="debug" component="precice::cplscheme::tests::PostProcessingMasterSlaveTest" switch="on" />
    <log-filter target="debug" component="precice::cplscheme::impl::ParallelMatrixOperations" switch="on" />

    <!-- <log-filter target=""      component=""      switch="on"/> -->
    <log-filter target="info"  component="tarch" switch="on"/> 
    
    <log-output column-separator=" | " log-time-stamp="no" 
                log-time-stamp-human-readable="no" log-machine-name="no" 
                log-message-type="no" log-trace="yes" log-output-file=""/>
  </run-tests>

</configuration>
